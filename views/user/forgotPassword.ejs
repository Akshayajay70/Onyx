<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="/tailwindcss/output.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-100">
    <div class="min-h-screen flex items-center justify-center">
        <div class="max-w-md w-full mx-4">
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-900">Forgot Password</h2>
                <p class="mt-2 text-sm text-gray-600">
                    Enter your email address and we'll send you a link to reset your password.
                </p>
            </div>

            <div class="bg-white p-8 rounded-lg shadow-md">
                <form id="forgotPasswordForm" class="space-y-6">
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">
                            Email address
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-black focus:border-black"
                        >
                    </div>

                    <div>
                        <button
                            type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-black hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black"
                        >
                            Send Reset Link
                        </button>
                    </div>
                </form>

                <div class="mt-4 text-center">
                    <a href="/login" class="text-sm text-gray-600 hover:text-gray-900">
                        Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        let userEmail = '';
        let otpVerified = false;

        document.getElementById('forgotPasswordForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!otpVerified) {
                // Send OTP
                userEmail = document.getElementById('email').value;
                try {
                    const response = await fetch('/forgot-password/send-otp', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email: userEmail })
                    });

                    const data = await response.json();

                    if (response.ok) {
                        // Show OTP input form
                        Swal.fire({
                            title: 'Enter OTP',
                            html: `
                                <input type="text" id="otp" class="swal2-input" placeholder="Enter 6-digit OTP">
                                <div class="mt-2">
                                    <button type="button" onclick="resendOTP()" class="text-sm text-gray-600 hover:text-gray-900">
                                        Resend OTP
                                    </button>
                                </div>
                            `,
                            confirmButtonText: 'Verify OTP',
                            showCancelButton: true,
                            confirmButtonColor: '#000000',
                            preConfirm: () => {
                                return document.getElementById('otp').value;
                            }
                        }).then((result) => {
                            if (result.isConfirmed) {
                                verifyOTP(result.value);
                            }
                        });
                    } else {
                        throw new Error(data.message);
                    }
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: error.message || 'Failed to send OTP',
                        confirmButtonColor: '#000000'
                    });
                }
            }
        });

        async function verifyOTP(otp) {
            try {
                const response = await fetch('/forgot-password/verify-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: userEmail, otp })
                });

                const data = await response.json();

                if (response.ok) {
                    otpVerified = true;
                    // Show password reset form
                    Swal.fire({
                        title: 'Reset Password',
                        html: `
                            <input type="password" id="newPassword" class="swal2-input" placeholder="New Password">
                            <input type="password" id="confirmPassword" class="swal2-input" placeholder="Confirm Password">
                        `,
                        confirmButtonText: 'Reset Password',
                        confirmButtonColor: '#000000',
                        showCancelButton: true,
                        preConfirm: () => {
                            const newPassword = document.getElementById('newPassword').value;
                            const confirmPassword = document.getElementById('confirmPassword').value;
                            if (newPassword !== confirmPassword) {
                                Swal.showValidationMessage('Passwords do not match');
                                return false;
                            }
                            return newPassword;
                        }
                    }).then((result) => {
                        if (result.isConfirmed) {
                            resetPassword(result.value);
                        }
                    });
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message || 'Failed to verify OTP',
                    confirmButtonColor: '#000000'
                });
            }
        }

        async function resetPassword(newPassword) {
            try {
                const response = await fetch('/forgot-password/reset-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: userEmail, newPassword })
                });

                const data = await response.json();

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: 'Password reset successfully',
                        confirmButtonColor: '#000000'
                    }).then(() => {
                        window.location.href = '/login';
                    });
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message || 'Failed to reset password',
                    confirmButtonColor: '#000000'
                });
            }
        }

        async function resendOTP() {
            try {
                const response = await fetch('/forgot-password/send-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: userEmail })
                });

                const data = await response.json();

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'OTP Resent',
                        text: 'Please check your email for the new OTP',
                        confirmButtonColor: '#000000'
                    });
                } else {
                    throw new Error(data.message);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message || 'Failed to resend OTP',
                    confirmButtonColor: '#000000'
                });
            }
        }
    </script>
</body>
</html> 