              await Swal.fire({
                icon: "success",
                title: "Success!",
                text: "Profile updated successfully",
                timer: 1500,
              });
            } else {
              const data = await response.json();
              Swal.fire({
                icon: "error",
                title: "Error",
                text: data.message || "Error updating profile",
              });
            }
          } catch (error) {
            console.error("Error:", error);
            Swal.fire({
              icon: "error",
              title: "Error",
              text: "An error occurred while updating your profile",
            });
          }
        });
    </script>
  </body>
</html>
